<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="8dp">
	
	<ImageView
		android:id="@+id/image_message_profile"
		android:layout_width="@dimen/small_profile_photo_size"
		android:layout_height="@dimen/small_profile_photo_size"
		android:background="@drawable/ic_user_placeholder"
		android:layout_marginLeft="@dimen/spacing_normal"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	
	<TextView
		android:id="@+id/text_message_body"
		android:text="hi man, how are yot?"
		android:background="@drawable/rounded_rectangle_red"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:maxWidth="240dp"
		android:padding="8dp"
		android:textColor="#ffffff"
		android:layout_marginTop="4dp"
		android:layout_marginLeft="8dp"
		app:layout_constraintBottom_toBottomOf="@id/image_message_profile"
		app:layout_constraintLeft_toRightOf="@+id/image_message_profile"
		app:layout_constraintTop_toTopOf="@+id/image_message_profile" />
	
	<TextView
		android:id="@+id/text_message_time"
		android:text="11:40"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="10sp"
		android:layout_marginLeft="4dp"
		app:layout_constraintBottom_toBottomOf="@+id/text_message_body"
		app:layout_constraintLeft_toRightOf="@+id/text_message_body" />

</androidx.constraintlayout.widget.ConstraintLayout>